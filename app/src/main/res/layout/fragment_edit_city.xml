<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    tools:context=".edit.EditStatesFragment"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/edit_nomeCity"
        android:layout_width="229dp"
        android:layout_height="24dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:textColor="@color/Titulo"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/id_edit"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_shaper"
        android:padding="5dp"
        android:textColorHint="@color/HintText"
        app:layout_constraintStart_toEndOf="@+id/id_textView"
        app:layout_constraintTop_toTopOf="@+id/id_textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ano"
        android:textColor="@color/Nomescidades"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/estado_textView"
        app:layout_constraintTop_toBottomOf="@+id/estado_textView" />

    <EditText
        android:id="@+id/edit_Ano"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_shaper"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColorHint="@color/HintText"
        app:layout_constraintEnd_toEndOf="@+id/edit_estado"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/edit_estado" />

    <EditText
        android:id="@+id/edit_slug"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_shaper"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColorHint="@color/HintText"
        app:layout_constraintEnd_toEndOf="@+id/edit_Population"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/edit_Population" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:text="Slug"
        android:textColor="@color/Nomescidades"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/estado_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Estado"
        android:textColor="@color/Nomescidades"
        android:textColorHint="@color/HintText"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/id_textView"
        app:layout_constraintTop_toBottomOf="@+id/id_textView" />

    <EditText
        android:id="@+id/edit_Population"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_shaper"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColorHint="@color/HintText"
        app:layout_constraintEnd_toEndOf="@+id/edit_Ano"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/edit_Ano" />

    <TextView
        android:id="@+id/id_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="80dp"
        android:text="ID"
        android:textColor="@color/Nomescidades"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_nomeCity" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="População"
        android:textColor="@color/Nomescidades"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/edit_estado"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_shaper"
        android:padding="5dp"
        android:textColorHint="@color/HintText"
        app:layout_constraintEnd_toEndOf="@+id/id_edit"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toEndOf="@+id/estado_textView"
        app:layout_constraintTop_toBottomOf="@+id/id_edit" />

    <Button
        android:id="@+id/savedbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Salvar"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/edit_slug"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/edit_slug" />

</androidx.constraintlayout.widget.ConstraintLayout>